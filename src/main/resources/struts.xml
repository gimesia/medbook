<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN" "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <package name="default" extends="struts-default,json-default">
        <action name="">
            <result>/landing.html</result>
        </action>

        <action name="login">
            <result>/login.html</result>
        </action>

        <action name="register">
            <result>/register.html</result>
        </action>

        <!-- Feed action for images.html -->
        <action name="getFeed" class="com.example.actions.FeedAction">
            <result type="json"/>
        </action>

        <!-- New Feed action for feed.html -->
        <action name="fetchFeedItems" class="com.example.actions.FeedPageAction" method="execute">
            <result name="success" type="json">
                <param name="root">feedItems</param>
            </result>
        </action>

        <!-- New Connections action for connections.html -->
        <action name="fetchConnections" class="com.example.actions.ConnectionsAction" method="execute">
            <result name="success" type="json">
                <param name="root">connections</param>
            </result>
        </action>

        <!-- New Account action for account.html -->
        <action name="fetchAccountInfo" class="com.example.actions.AccountAction" method="execute">
            <result name="success" type="json">
                <param name="root">username,email,role</param>
            </result>
        </action>
    </package>
</struts>
